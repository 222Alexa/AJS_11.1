{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-console": 0,
        "no-restricted-syntax": [
      "error",
      "LabeledStatement",
      "WithStatement"
    ],
        "no-unused-vars": "warn",
        "no-underscore-dangle": "warn"
    },
    "settings": {
        "import/no-unresolved": 0, // Turn off "Unable to resolve path to module ..." error
        "import/extensions": 0 // Turn off "Missing file extension for ..." error
    }
}
